{
  "name": "lorawan-devices",
  "version": "1.0.0",
  "description": "LoRaWAN Device Repository",
  "main": "bin/validate.js",
  "bin": {
    "lorawan-devices": "validate.js"
  },
  "scripts": {
    "validate": "find examples -name '*.yaml' -type f -print0 | xargs -0 -n 1 -I {} ajv validate -s schema -d {} --errors text",
    "format": "prettier --write schema.json \"vendor/**/*.yaml\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TheThingsNetwork/lorawan-devices.git"
  },
  "author": "The Things Network Foundation",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/TheThingsNetwork/lorawan-devices/issues"
  },
  "homepage": "https://github.com/TheThingsNetwork/lorawan-devices#readme",
  "devDependencies": {
    "ajv-cli": "^3.2.1",
    "prettier": "^2.0.5"
  }
}
